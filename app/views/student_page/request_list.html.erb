<h1>Request List</h1>

<table>
  <thead>
  <tr>
    <th>Isbn</th>
    <th>Title</th>
    <th>University</th>
    <th>Library</th>
    <th>Is special collection</th>
    <th>Available number</th>
    <th>Hold request number</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= Book.find(book.book_id).isbn %></td>
      <td><%= Book.find(book.book_id).title %></td>
      <td><%= University.find(Book.find(book.book_id).university_id).name %></td>
      <td><%= Library.find(Book.find(book.book_id).library_id).name %></td>
      <td><%= Book.find(book.book_id).is_special_collection %></td>
      <td><%= LibraryBookList.find_by_book_id(book.book_id).number %></td>
      <td><%= HoldList.where(book_id: book.book_id).size %></td>
      <td><%= link_to 'delete request', s_request_list_path + "/" + book.id.to_s, method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>