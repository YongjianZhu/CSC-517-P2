<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
  <tr>
    <th>Isbn</th>
    <th>Title</th>
    <th>University</th>
    <th>Library</th>
    <th>Is special collection</th>
    <th>Available number</th>
    <th>Hold request number</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= Book.find(book.book_id).isbn %></td>
      <td><%= Book.find(book.book_id).title %></td>
      <td><%= University.find(Book.find(book.book_id).university_id).name %></td>
      <td><%= Library.find(Book.find(book.book_id).library_id).name %></td>
      <td><%= Book.find(book.book_id).is_special_collection %></td>
      <td><%= book.number %></td>
      <td><%= book.hold %></td>
      <td><%= link_to 'add to wish list', s_wish_list_path + "/" + book.id.to_s, method: :post %></td>
      <td><%= link_to 'details', s_books_path + "/" + book.id.to_s, method: :get %></td></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>