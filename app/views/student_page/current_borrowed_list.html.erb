<p id="notice"><%= notice %></p>

<h1>Current borrowed Books</h1>

<table>
  <thead>
  <tr>
    <th>Isbn</th>
    <th>Title</th>
    <th>University</th>
    <th>Library</th>
    <th>Is special collection</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @current_borrowed_list.each do |l| %>
    <tr>
      <td><%= Book.find(l.book_id).isbn %></td>
      <td><%= Book.find(l.book_id).title %></td>
      <td><%= University.find(Book.find(l.book_id).university_id).name %></td>
      <td><%= Library.find(Book.find(l.book_id).library_id).name %></td>
      <td><%= Book.find(l.book_id).is_special_collection %></td>
      <td><%= link_to 'return book',  s_current_borrowed_list_path + "/" + l.id.to_s, method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>