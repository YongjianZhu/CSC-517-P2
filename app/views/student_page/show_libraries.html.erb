<p id="notice"><%= notice %></p>

<h1>Libraries</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>University</th>
    <th>Location</th>
    <th>Max day can borrow</th>
    <th>Overdue fine</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% Student.show_library.each do |library| %>
    <tr>
      <td><%= library.name %></td>
      <td><%= University.find(library.university_id).name %></td>
      <td><%= library.location %></td>
      <td><%= library.max_day_can_borrow %></td>
      <td><%= library.overdue_fine %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>