<h1>Books</h1>

<table class="table table-striped">
  <thead >
  <tr>
    <th class="col text-center">#</th>
    <th class="col text-center">Isbn</th>
    <th class="col text-center">Title</th>
    <th class="col text-center">University</th>
    <th class="col text-center">Library</th>
    <th class="col text-center">Is special collection</th>
    <th class="col text-center">Available number</th>
    <th class="col text-center">Hold request number</th>
    <th class="col text-center" colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @wish_lists.each do |w| %>
    <tr>
      <td class="text-center"><%= w.library_book_list_id %></td>
      <td class="text-center"><%= Book.find(LibraryBookList.find(w.library_book_list_id).book_id).isbn %></td>
      <td class="text-center"><%= Book.find(LibraryBookList.find(w.library_book_list_id).book_id).title %></td>
      <td class="text-center"><%= University.find(Book.find(LibraryBookList.find(w.library_book_list_id).book_id).university_id).name %></td>
      <td class="text-center"><%= Library.find(Book.find(LibraryBookList.find(w.library_book_list_id).book_id).library_id).name %></td>
      <td class="text-center"><%= Book.find(LibraryBookList.find(w.library_book_list_id).book_id).is_special_collection %></td>
      <td class="text-center"><%= LibraryBookList.find(w.library_book_list_id).number %></td>
      <td class="text-center"><%= HoldList.where(book_id: LibraryBookList.find(w.library_book_list_id).book_id).size %></td>
      <td class="text-center"><td><%= link_to 'delete', s_wish_list_path + "/" + w.id.to_s, method: :delete %></td></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>