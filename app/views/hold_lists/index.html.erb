<p id="notice"><%= notice %></p>

<h1>Hold Lists</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Book</th>
      <th>Library</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hold_lists.each do |hold_list| %>
      <tr>
        <td><%= hold_list.student_id %></td>
        <td><%= hold_list.book_id %></td>
        <td><%= hold_list.library_id %></td>
        <td><%= link_to 'Show', hold_list %></td>
        <td><%= link_to 'Edit', edit_hold_list_path(hold_list) %></td>
        <td><%= link_to 'Destroy', hold_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

