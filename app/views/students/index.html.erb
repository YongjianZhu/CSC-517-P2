<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th class="col text-center">ID</th>
    <th class="col text-center">Email</th>
    <th class="col text-center">Name</th>
    <th class="col text-center">Education level</th>
    <th class="col text-center">University</th>
    <th class="col text-center" colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @students.each do |student| %>
    <tr>
      <td class="text-center"><%= student.id %></td>
      <td class="text-center"><%= student.email %></td>
      <td class="text-center"><%= student.name %></td>
      <td class="text-center"><%= student.education_level %></td>
      <td class="text-center"><%= University.find(student.university_id).name %></td>
      <td><%= link_to "Edit", "/admin_page/students/" + student.id.to_s + "/edit", method: :get %></td>
      <td><%= link_to "delete", "/admin_page/students/" + student.id.to_s, method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<td><%= link_to "add new student", new_student_registration_path, method: :get %></td>
