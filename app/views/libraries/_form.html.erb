<%= form_with(model: library, local: true) do |form| %>
  <% if library.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(library.errors.count, "error") %> prohibited this library from being saved:</h2>

      <ul>
        <% library.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <% if current_admin %>
    <div class="field">
      <%= form.label :university_id %>
      <%= select("library", "university_id", University.all.collect { |c| [c.name, c.id] }) %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :max_day_can_borrow %>
    <%= form.number_field :max_day_can_borrow %>
  </div>

  <div class="field">
    <%= form.label :overdue_fine %>
    <%= form.number_field :overdue_fine %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
