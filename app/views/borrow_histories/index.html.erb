<p id="notice"><%= notice %></p>

<h1>Borrow Histories</h1>

<table>
  <thead>
    <tr>
      <th>Library</th>
      <th>Student</th>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @borrow_histories.each do |borrow_history| %>
      <tr>
        <td><%= borrow_history.library_id %></td>
        <td><%= borrow_history.student_id %></td>
        <td><%= borrow_history.book_id %></td>
        <td><%= link_to 'Show', borrow_history %></td>
        <td><%= link_to 'Edit', edit_borrow_history_path(borrow_history) %></td>
        <td><%= link_to 'Destroy', borrow_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

