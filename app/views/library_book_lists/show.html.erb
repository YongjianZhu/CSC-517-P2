<p id="notice"><%= notice %></p>

<strong>Book Image:</strong>
<%=image_tag Book.find(@library_book_list.book_id).image.url(:medium) %>
<p>
  <strong>Isbn:</strong>
  <%= Book.find(@library_book_list.book_id).isbn %>
</p>

<p>
  <strong>Title:</strong>
  <%= Book.find(@library_book_list.book_id).title %>
</p>

<p>
  <strong>University:</strong>
  <%= University.find(Book.find(@library_book_list.book_id).university_id).name %>
</p>

<p>
  <strong>Library:</strong>
  <%= Library.find(Book.find(@library_book_list.book_id).library_id).name %>
</p>

<p>
  <strong>Is special collection:</strong>
  <%= Book.find(@library_book_list.book_id).is_special_collection %>
</p>
<p>
  <strong>Number:</strong>
  <%= @library_book_list.number %>
</p>


<%= link_to 'Edit', edit_library_book_list_path(@library_book_list) %> |
<%= link_to 'Back', library_book_lists_path %>
